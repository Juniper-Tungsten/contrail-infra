cache:
  expiration:
    server: 5
    port: 5
    floating-ip: 5
clouds:
  jnpr-contrail-ci:
    auth:
      auth_url:     '<%= @cloud_credentials['jnpr-contrail-ci']['auth']['auth_url'] %>'
      username:     '<%= @cloud_credentials['jnpr-contrail-ci']['auth']['username'] %>'
      password:     '<%= @cloud_credentials['jnpr-contrail-ci']['auth']['password'] %>'
      project_name: '<%= @cloud_credentials['jnpr-contrail-ci']['auth']['project'] %>'
    identity_api_version: '2'
    image_api_version: '2'
    volume_api_version: None
    compute_endpoint_override: '<%= @cloud_credentials['jnpr-contrail-ci']['compute_endpoint_override'] %>'
    image_endpoint_override:   '<%= @cloud_credentials['jnpr-contrail-ci']['image_endpoint_override'] %>'
    network_endpoint_override: '<%= @cloud_credentials['jnpr-contrail-ci']['network_endpoint_override'] %>'
    networks:
      - name: test_net
        routes_externally: False
      - name: public
        routes_externally: True
      - name: ci-zuulv3-internal
        nat_destination: True
  jnpr-contrail-ci-c:
    auth:
      auth_url:     '<%= @cloud_credentials['jnpr-contrail-ci-c']['auth']['auth_url'] %>'
      username:     '<%= @cloud_credentials['jnpr-contrail-ci-c']['auth']['username'] %>'
      password:     '<%= @cloud_credentials['jnpr-contrail-ci-c']['auth']['password'] %>'
      project_name: '<%= @cloud_credentials['jnpr-contrail-ci-c']['auth']['project'] %>'
    interface: public
    identity_api_version: '3'
    networks:
      - name: ci-zuulv3-internal
        nat_destination: True
  jnpr-cluster-c-isolated:
    auth:
      auth_url:     '<%= @cloud_credentials['jnpr-cluster-c-isolated']['auth']['auth_url'] %>'
      username:     '<%= @cloud_credentials['jnpr-cluster-c-isolated']['auth']['username'] %>'
      password:     '<%= @cloud_credentials['jnpr-cluster-c-isolated']['auth']['password'] %>'
      project_name: '<%= @cloud_credentials['jnpr-cluster-c-isolated']['auth']['project'] %>'
    interface: public
    identity_api_version: '3'
    networks:
      - name: isolated_nodepool_network
        nat_destination: True
